<section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-7">
                                <h5 class="mb-3"><a href="/ecommerce" class="text-body"><i
                                            class="fa fa-arrow-circle-o-left"></i>
                                        Continue shopping</a></h5>
                                <hr>
                                <input type="hidden" name="product_id"  id="product_id" value="<%= result._id %>" />
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="ms-3">
                                                    <h5><%= result.name %></h5>
                                                    <p class="small mb-0"><%= result.desc %></p>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" class="form-control" name="qty" id="qty"
                                                    value="1" />
                                            </div>
                                            <div class="col-sm-3">
                                                <h5 class="mb-0 mt-2"><i class="fa fa-inr" aria-hidden="true"></i> <%= result.price %></h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="card bg-primary text-white rounded-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <h5 class="mb-0">Customer details</h5>
                                        </div>
                                        <form class="mt-4">
                                            <div class="form-white mb-4">
                                                <label class="form-label" for="typeName">Customer Name</label>
                                                <input type="text" id="typeName" class="form-control form-control-lg"
                                                    siez="17" placeholder="Customer Name" />
                                            </div>
                                        </form>
                                        <hr class="my-4">
                                        <div class="d-flex justify-content-between">
                                            <p class="mb-2">Subtotal</p>
                                            <p class="mb-2"><i class="fa fa-inr" aria-hidden="true"></i>
                                                  <%= result.price %></p>
                                        </div>
                                        <div class="d-flex justify-content-between mb-4">
                                            <p class="mb-2">Total</p>
                                            <p class="mb-2"><i class="fa fa-inr" aria-hidden="true"></i><%= result.price %></p>
                                        </div>
                                        <button type="button" class="btn btn-dark btn-block btn-lg">
                                            <div class="d-flex justify-content-between">
                                                <span><i class="fa fa-inr" aria-hidden="true"></i> <%= result.price %></span>
                                                <span>Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>