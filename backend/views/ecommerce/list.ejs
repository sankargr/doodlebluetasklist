<section style="background-color: rgb(206, 191, 191);">
    <div class="container py-5">

        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-12 mb-3">
                <div class="card shadow-0 border rounded-3">
                    <div class="card-body">
                        <h2 class="text-center"> E Commerce</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            
            <% if(result && result.length > 0) { %>
                
                <% result.forEach(function(item) { %>
           
                    <div class="col-md-4 col-xl-4 mb-3">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        <h4> <%= item.name %></h4>
                                        <p class="text- mb-4 mb-md-0">
                                            <%= item.desc %>
                                        </p>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-6 border-sm-start-none border-start">
                                        <div class="d-flex flex-row align-items-center mb-1">
                                            <h5 class="mb-1 me-1">INR <%= item.price %></h5>
                                        </div>
                                        <div class="d-flex flex-column mt-4">
                                            <a class="btn btn-primary btn-sm" href="/ecommerce/product/details/<%= item._id %>" type="button">Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                <% }) %>
                <% } else { %>
                 <b>No Product Available</b>
                <% }  %>


            



        </div>
    </div>
</section>